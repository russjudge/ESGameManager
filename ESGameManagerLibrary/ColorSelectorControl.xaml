<UserControl x:Class="ESGameManagerLibrary.ColorSelectorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ESGameManagerLibrary"
             mc:Ignorable="d" Name="uc"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <local:ColorListToBrushConverter x:Key="ColorListToBrushConverter" />
    </UserControl.Resources>
    <StackPanel Orientation="Horizontal">
        <Button Click="OnColorLeft">
            <Button.Content>
                <Image Height="24" Source="/ESGameManagerLibrary;component/Resources/leftarrow.png" />
            </Button.Content>
        </Button>
        <TextBlock
            Width="24"
            Background="{Binding ElementName=uc, Path=SelectedColor, Converter={StaticResource ColorListToBrushConverter}}" />
        <Button Click="OnColorRight">
            <Button.Content>
                <Image Height="24" Source="/ESGameManagerLibrary;component/Resources/rightarrow.png" />
            </Button.Content>
        </Button>
    </StackPanel>
</UserControl>
