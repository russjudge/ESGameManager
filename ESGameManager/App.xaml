<Application x:Class="ESGameManager.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ESGameManager"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- Style for header/footer rows. -->
        <Style x:Key="headerFooterRowStyle" TargetType="{x:Type TableRowGroup}">
            <Setter Property="FontWeight" Value="DemiBold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Background" Value="LightGray"/>
        </Style>

        <!-- Style for data rows. -->
        <Style x:Key="dataRowStyle" TargetType="{x:Type TableRowGroup}">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontStyle" Value="Italic"/>
        </Style>

        <!--<ResourceDictionary x:Key="ReportResourceDictionary">
            <DataTemplate x:Key="ReportFooterDataTemplate">
                <TextBlock Text="{DynamicResource PageNumber}" HorizontalAlignment="Right"/>
            </DataTemplate>
        </ResourceDictionary>-->
    </Application.Resources>
</Application>
